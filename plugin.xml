<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            label="Sample Action Set"
            visible="true"
            id="Simulator.actionSet">
         <action
               label="&amp;Sample Action"
               icon="icons/sample.gif"
               class="simulator.actions.ExeOnePathAction"
               tooltip="Execute One Path"
               toolbarPath="sampleGroup"
               id="simulator.actions.ExeOnePathAction">
         </action>
          <action
               label="&amp;Sample Action"
               icon="icons/sample.gif"
               class="simulator.actions.ExeOneStepAction"
               tooltip="Execute One Step"
               toolbarPath="sampleGroup2"
               id="simulator.actions.ExeOneStepAction">
         </action>
      </actionSet>
   </extension>
   
   
   <extension
         point="org.eclipse.ui.views">
         <category 
         	id="simulator.view.category"
         	name="Simulator"> 
   		 </category> 
   		<view 
         category="simulator.view.category"
         class="simulator.view.treeview.views.TraceView"
         id="simulator.view.treeview.views.TraceView"
         name="Execution Trace View"
         restorable="true"> 
   		</view>
   </extension>
   
  
</plugin>
